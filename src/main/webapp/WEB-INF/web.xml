<?xml version="1.0" encoding="UTF-8"?>
<!-- web.xml -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
           <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
         

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>ReportIssueServlet</servlet-name>
        <servlet-class>com.example.servlets.ReportIssueServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>ReportIssueServlet</servlet-name>
        <url-pattern>/reportIssue</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>SubmitFeedbackServlet</servlet-name>
        <servlet-class>com.example.servlets.SubmitFeedbackServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>SubmitFeedbackServlet</servlet-name>
        <url-pattern>/submit-feedback</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ViewIssuesadminServlet</servlet-name>
        <servlet-class>com.example.servlets.ViewIssuesadminServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>ViewIssuesadminServlet</servlet-name>
        <url-pattern>/ViewIssuesAdmin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PoliticianLoginServlet</servlet-name>
        <servlet-class>com.example.servlets.PoliticianLoginServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>PoliticianLoginServlet</servlet-name>
        <url-pattern>/PoliticianLogin</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>PoliticianRegisterServlet</servlet-name>
        <servlet-class>com.example.servlets.PoliticianRegisterServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>PoliticianRegisterServlet</servlet-name>
        <url-pattern>/politician-register</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>UpdateCitizenServlet</servlet-name>
        <servlet-class>com.example.servlets.UpdateCitizenServlet</servlet-class>
    </servlet>
    
      <servlet-mapping>
        <servlet-name>UpdateCitizenServlet</servlet-name>
        <url-pattern>/UpdateCitizen</url-pattern>
    </servlet-mapping>
</web-app>
